{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tapps-coding-agents.com/schemas/1.0/PlanDetails.json",
  "title": "PlanDetails",
  "description": "Structured plan information for planning artifacts.",
  "version": "1.0",
  "additionalProperties": false,
  "properties": {
    "summary": {
      "title": "Summary",
      "type": "string"
    },
    "estimated_duration_hours": {
      "anyOf": [
        {
          "type": "number"
        },
        {
          "type": "null"
        }
      ],
      "default": null,
      "title": "Estimated Duration Hours"
    },
    "key_risks": {
      "items": {
        "type": "string"
      },
      "title": "Key Risks",
      "type": "array"
    },
    "assumptions": {
      "items": {
        "type": "string"
      },
      "title": "Assumptions",
      "type": "array"
    },
    "constraints": {
      "items": {
        "type": "string"
      },
      "title": "Constraints",
      "type": "array"
    },
    "objectives": {
      "items": {
        "type": "string"
      },
      "title": "Objectives",
      "type": "array"
    },
    "success_criteria": {
      "items": {
        "type": "string"
      },
      "title": "Success Criteria",
      "type": "array"
    }
  },
  "required": [
    "summary"
  ],
  "type": "object"
}