{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Grep",
      "Glob",
      "Bash(tapps-agents *)",
      "Bash(python -m tapps_agents *)",
      "Bash(pytest *)",
      "Bash(ruff *)",
      "Bash(mypy *)",
      "Bash(bd *)",
      "Bash(git diff *)",
      "Bash(git log *)",
      "Bash(git status *)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "env": {
    "TAPPS_AGENTS_MODE": "claude-code",
    "CONTEXT7_KB_CACHE": ".tapps-agents/kb/context7-cache"
  },
  "enableAllProjectMcpServers": true
}
